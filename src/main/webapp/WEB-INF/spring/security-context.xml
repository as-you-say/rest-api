<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:sec="http://www.springframework.org/schema/security"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/security classpath:xsd/spring-security.xsd
		http://www.springframework.org/schema/beans classpath:xsd/spring-beans-4.3.xsd">

    <sec:http pattern="/resources/**" security="none" />
    <!--    <sec:http pattern="/api/**"></sec:http>-->
    <sec:http use-expressions="true">
        <sec:intercept-url pattern="/login" access="permitAll()" />
        <sec:intercept-url pattern="/signUp" access="permitAll()" />
        <sec:intercept-url pattern="/admin/**" access="hasAnyRole('ROLE_ADMIN')" />
        <sec:intercept-url pattern="/**" access="isAuthenticated()" />
        <sec:form-login login-page="/login"
                        default-target-url="/"
                        login-processing-url="/login"
                        authentication-failure-url="/login"
                        username-parameter="id"
                        password-parameter="password"
                        always-use-default-target="true"
        />
        <sec:logout
                logout-url="/logout"
                success-handler-ref="atcSecurityLogoutSuccessHandler"
        />
    </sec:http>

    <!--  provider  -->
    <bean id="bCryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>
    <bean id="atcSecurityUserDetailsService" class="kr.co.azwell.security.user.AtcSecurityUserDetailsService"/>
    <sec:authentication-manager>
        <sec:authentication-provider user-service-ref="atcSecurityUserDetailsService">
            <sec:password-encoder ref="bCryptPasswordEncoder" />
        </sec:authentication-provider>
    </sec:authentication-manager>

</beans>